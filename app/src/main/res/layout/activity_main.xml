<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fi.hamk.riksu.hamkopendata.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_above="@+id/button" />

    <Button
        android:text="Resurssit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Varaukset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_res"
        android:layout_below="@+id/listView"
        android:layout_toStartOf="@+id/button" />

    <Button
        android:text="Totsut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_real"
        android:layout_below="@+id/listView"
        android:layout_alignParentStart="true" />

    <Button
        android:text="OPS"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_cur"
        android:layout_alignBaseline="@+id/button_real"
        android:layout_alignBottom="@+id/button_real"
        android:layout_toStartOf="@+id/button_real" />

</RelativeLayout>
</layout>
